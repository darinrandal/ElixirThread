<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Elixir Thread", root_path, :class => "brand" %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="active"><%= link_to "Home", root_path %></li>
          <li><a href="#about">Events</a></li>
          <li><a href="#contact">Ratings</a></li>
          <li><a href="#">Search</a></li>
          <li><a href="#">Latest Post</a></li>
          <% if !user_signed_in? %>
            <li><%= link_to "Register", new_registration_path(resource_name) %></li>
          <% end %>
        </ul>
        <% if user_signed_in? %>
        <ul class="nav pull-right">
          <li class=" dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.username %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", edit_user_registration_path %></li>
              <li><a href="#">Settings</a></li>
              <li><a href="#">My Events</a></li>
              <li class="divider"></li>
              <li><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
        </ul>
        <% else %>
          <%= form_for(resource, :as => resource_name, :url => new_user_session_path, :html => { class: "navbar-form pull-right" }) do |f| %>
            <%= f.text_field :username, :autofocus => true, :style => "width:110px;", :class => "span2", :placeholder => "Username" %>
            <%= f.password_field :password, :style => "width:110px;", :placeholder => "Password" %>
            <input name="user[remember_me]" type="hidden" value="1" />
            <%= f.submit "Sign in", :class => "btn" %>
          <% end %>
        <% end %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div> <!--/.navbar -->
